<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.oracle.model" auto-import="false">

    <class name="Round" table="oracle_oltp:round">
        <id name="id" column="round_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">ORACLE_ROUND_SEQ</param>
                <param name="return_class">java.lang.Integer</param>
            </generator>
        </id>
        <property name="name"/>
        <set name="prizes" table="oracle_oltp:round_prize_xref" cascade="all" sort="natural">
            <key column="round_id" not-null="true"/>
            <many-to-many column="prize_id" class="Prize"/>
        </set>
        <set name="rooms" cascade="save-update" inverse="true">
            <key column="round_id" not-null="true"/>
            <one-to-many class="Room"/>
        </set>
        <set name="config" cascade="save-update" inverse="true" outer-join="true">
            <key column="round_id" not-null="true"/>
            <one-to-many class="RoundConfig"/>
        </set>
        <set name="phases" cascade="save-update" inverse="true">
            <key column="round_id" not-null="true"/>
            <one-to-many class="RoundPhase"/>
        </set>

        <many-to-one name="contest" column="contest_id" class="Contest"/>
        <many-to-one name="status" column="round_status_id" class="RoundStatus"/>
    </class>
</hibernate-mapping>