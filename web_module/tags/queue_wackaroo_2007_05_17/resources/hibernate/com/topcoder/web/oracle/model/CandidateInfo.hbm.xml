<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.oracle.model" auto-import="false">

    <class name="CandidateInfo" table="oracle_oltp:candidate_info">
        <composite-id name="id" class="CandidateInfo$Identifier">
            <key-many-to-one name="property" class="CandidateProperty" column="property_id"/>
            <key-many-to-one name="candidate" class="Candidate" column="candidate_id"/>
        </composite-id>

        <property name="value" column="property_value"/>
    </class>

</hibernate-mapping>