<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>


<servlet>
  <servlet-name>resume</servlet-name>
  <display-name>resume</display-name>
  <description>The job posting servlet</description>
  <servlet-class>com.topcoder.web.resume.servlet.Controller</servlet-class>

  <init-param>
    <param-name>jsp_root</param-name>
    <param-value>/</param-value>
    <description>
      The directory holding JSP pages for resume module.
    </description>
  </init-param>

</servlet>

<servlet-mapping>
  <servlet-name>resume</servlet-name>
  <url-pattern>resume</url-pattern>
</servlet-mapping>

</web-app>
