<?xml version="1.0"?>

<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 1.1//EN' 'http://java.sun.com/j2ee/dtds/ejb-jar_1_1.dtd'>

<ejb-jar>
    <display-name>Forum</display-name>
	<enterprise-beans>
		<session>
			<ejb-name>Forum</ejb-name>
			<home>com.topcoder.web.ejb.forum.ForumHome</home>
			<remote>com.topcoder.web.ejb.forum.Forum</remote>
			<ejb-class>com.topcoder.web.ejb.forum.ForumBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
    	</session>
   	</enterprise-beans>
    <assembly-descriptor>
		<container-transaction>
	  		<method>
	    		<ejb-name>Forum</ejb-name>
	    		<method-intf>Remote</method-intf>
	    		<method-name>*</method-name>
	  		</method>
  	    	<trans-attribute>Required</trans-attribute>
      	</container-transaction>
    </assembly-descriptor>
</ejb-jar>