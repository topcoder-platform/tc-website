<?xml version="1.0"?>

<!DOCTYPE ejb-jar PUBLIC 
 '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 1.1//EN' 
 'http://java.sun.com/j2ee/dtds/ejb-jar_1_1.dtd'>

<ejb-jar>
  <enterprise-beans>
    <entity>
      <description>
        The UserServices entity bean encapsulates access to the applicant records.  The deployer 
        will use bean-managed persistence to integrate the entity bean with the back-end
        system managing the employee records.
      </description>
      <ejb-name>UserServices</ejb-name>
      <home>com.topcoder.ejb.UserServices.UserServicesHome</home>
      <remote>com.topcoder.ejb.UserServices.UserServices</remote>
      <ejb-class>com.topcoder.ejb.UserServices.UserServicesBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Integer</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>UserServices</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>


