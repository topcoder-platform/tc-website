<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.creative.model">

    <class name="ContestPrize" table="contest_prize">
        <composite-id name="id" class="ContestPrize$Identifier">
            <key-property name="place" column="place"/>
            <key-many-to-one name="contest" class="Contest" column="contest_id"/>
        </composite-id>

        <many-to-one name="contest" column="contest_id" class="Contest" access="field"
                     cascade="none" insert="false" update="false"/>

        <!--
                <property name="place" access="field"/>
        -->
        <property name="amount" column="prize_amount" access="field"/>

    </class>

</hibernate-mapping>