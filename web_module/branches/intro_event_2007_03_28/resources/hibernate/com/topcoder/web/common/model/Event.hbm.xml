<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.common.model">

    <class name="Event" table="event">
        <id name="id" column="event_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">EVENT_SEQ</param>
            </generator>
        </id>
        <many-to-one name="type" column="event_type_id" class="EventType" access="field" fetch="join"/>
        <property name="description" column="event_desc" access="field"/>
        <property name="shortDescription" column="event_short_desc" access="field"/>
        <property name="registrationStart" column="start_registration" access="field"/>
        <property name="registrationEnd" column="end_registration" access="field"/>
        <many-to-one name="terms" column="terms_of_use_id" class="TermsOfUse" access="field"/>
        <many-to-one name="survey" column="survey_id" cascade="save-update" class="Survey" access="field"/>

        <set name="users" table="event_registration" inverse="true" access="field">
            <key column="event_id"/>
            <many-to-many column="user_id" class="User"/>
        </set>

        <set name="contests" table="tcs_catalog:contest" inverse="true" access="field" cascade="save-update">
            <key column="event_id"/>
            <one-to-many  class="com.topcoder.web.common.model.comp.Contest"/>
        </set>

        <many-to-one name="parent" column="parent_event_id" class="Event" access="field"/>
        
        <set name="children" table="Event" inverse="true" access="field">
            <key column="parent_event_id"/>
            <one-to-many  class="Event"/>
        </set>

         <joined-subclass name="IntroEvent" table="intro_event">
            <key column="event_id" not-null="true" />
            <many-to-one name="school" column="school_id" class="School" access="field" fetch="join"/>
            <property name="roundId" column="round_id" access="field"/>
            <property name="forumId" column="forum_id" access="field"/>
            <many-to-one name="timeZone" column="timezone_id" class="TimeZone" access="field"/>
            <many-to-one name="image" column="image_id" class="Image" access="field" fetch="join"/>
            <property name="eligibilityCommandId" column="eligibility_command_id" access="field"/>                        
            <map name="config" cascade="all" inverse="true" access="field">
                <key column="event_id" not-null="true" />
                <map-key column="property_id" type="integer"/>
                <one-to-many class="IntroEventConfig"/>
            </map>
            <property name="roundStart" access="field">
                <formula>
                        (select rs.start_time 
                        from round_segment rs
                        where rs.segment_id = 2
                        and rs.round_id = round_id)
                </formula>
            </property>
            <property name="roundEnd" access="field">
                <formula>
                        (select rs.start_time 
                        from round_segment rs
                        where rs.segment_id = 5
                        and rs.round_id = round_id)
                </formula>
            </property>

            <property name="roundName" access="field">
                <formula>
                        (select c.name
                        from contest c, round r
                        where c.contest_id = r.contest_id
                        and r.round_id = round_id)
                </formula>
            </property>
        
        </joined-subclass>
    </class>
</hibernate-mapping>