<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
    <display-name>Notification</display-name>
    <enterprise-beans>
        <session>
            <ejb-name>NotificationEJB</ejb-name>
            <home>com.topcoder.dde.notification.NotificationHome</home>
            <remote>com.topcoder.dde.notification.Notification</remote>
            <ejb-class>com.topcoder.dde.notification.NotificationBean</ejb-class>
            <session-type>Stateless</session-type>
            
            <transaction-type>Container</transaction-type>
            <ejb-ref>
                <ejb-ref-name>security/Policy</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <home>com.topcoder.security.policy.PolicyRemoteHome</home>
                <remote>com.topcoder.security.policy.PolicyRemote</remote>
            </ejb-ref>
            
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/DDECompForumXrefEJB</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.topcoder.dde.persistencelayer.interfaces.LocalDDECompForumXrefHome</local-home>
                <local>com.topcoder.dde.persistencelayer.interfaces.LocalDDECompForumXref</local>
                <ejb-link>DDECompForumXrefEJB</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <res-ref-name>jdbc/DefaultDS</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
            </resource-ref>
        </session>
    </enterprise-beans>
</ejb-jar>
