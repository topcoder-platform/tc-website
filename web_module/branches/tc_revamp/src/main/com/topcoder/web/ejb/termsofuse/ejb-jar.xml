<?xml version="1.0"?>

<!DOCTYPE ejb-jar PUBLIC
        "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
        "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
    <description>Terms of Use Jar</description>
    <display-name>Terms of Use Jar</display-name>
    <enterprise-beans>
        <session>
            <description>Terms of Use EJB</description>
            <display-name>Terms of Use EJB</display-name>
            <ejb-name>TermsOfUse</ejb-name>
            <home>com.topcoder.web.ejb.termsofuse.TermsOfUseHome</home>
            <remote>com.topcoder.web.ejb.termsofuse.TermsOfUse</remote>
            <local-home>com.topcoder.web.ejb.termsofuse.TermsOfUseLocalHome</local-home>
            <local>com.topcoder.web.ejb.termsofuse.TermsOfUseLocal</local>
            <ejb-class>com.topcoder.web.ejb.termsofuse.TermsOfUseBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>TermsOfUse</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>



