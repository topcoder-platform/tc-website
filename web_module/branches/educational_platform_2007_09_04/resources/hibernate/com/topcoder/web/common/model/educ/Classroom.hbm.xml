<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.common.model.educ">

    <class name="Classroom" table="classroom">
        <id name="id" column="classroom_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">CLASSROOM_SEQ</param>
            </generator>
        </id>
        
        <many-to-one name="professor" column="professor_id" access="field" class="Professor"/>
        <property name="name" column="name" access="field"/>
        <property name="statusId" column="status_id" access="field"/>
        <property name="academicPeriod" column="academic_period" access="field"/>
        <property name="description" column="description" access="field"/>
        
        <set name="studentClassrooms" table="student_classroom_xref" cascade="save-update" inverse="true" access="field">
            <key column="classroom_id" not-null="true"/>
            <one-to-many class="StudentClassroom"/>
        </set>
        
    </class>
</hibernate-mapping>
