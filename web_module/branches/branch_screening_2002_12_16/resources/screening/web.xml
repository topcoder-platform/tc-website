<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>


<servlet>
  <servlet-name>screening</servlet-name>
  <display-name>screening</display-name>
  <description>The main controller servlet</description>
  <servlet-class>com.topcoder.web.screening.controller.MainServlet</servlet-class>

  <!-- Controller parameters -->
  <init-param>
    <param-name>processors_package</param-name>
    <param-value>com.topcoder.web.screening.request</param-value>
    <description></description>
  </init-param>
  
  <init-param>
    <param-name>error_page</param-name>
    <param-value>/errorPage.jsp</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>login_page</param-name>
    <param-value>/login.jsp</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>valid_char_list</param-name>
    <param-value>abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ_</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>controller_url</param-name>
    <param-value>/screening</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>default_page</param-name>
    <param-value>/index.jsp</param-value>
    <description></description>
  </init-param>

  <!-- URL Parameter constant names -->
  <init-param>
    <param-name>user_id_parameter</param-name>
    <param-value>userId</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>referrer_parameter</param-name>
    <param-value>referrer</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>email_address_parameter</param-name>
    <param-value>emailAddress</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>password_parameter</param-name>
    <param-value>password</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>request_processor_parameter</param-name>
    <param-value>rp</param-value>
    <description></description>
  </init-param>

  <!-- Parameters used by Candidate -->
  <init-param>
    <param-name>candidate_info_parameter</param-name>
    <param-value>candidateInfo</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>candidate_setup_page</param-name>
    <param-value>/candidate/candidateSetup.jsp</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>candidate_list_page</param-name>
    <param-value>/candidate/candidateList.jsp</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>update_candidate_default_forward_processor</param-name>
    <param-value>CandidateList</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>update_candidate_create_coder_status_id</param-name>
    <param-value>1</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>max_password_size</param-name>
    <param-value>8</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>candidate_list_query_key</param-name>
    <param-value>candidateList</param-value>
    <description></description>
  </init-param>

  <!-- Security parameters -->
  <init-param>
    <param-name>security_context_factory</param-name>
    <param-value>org.jnp.interfaces.NamingContextFactory</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>security_provider_url</param-name>
    <param-value>172.16.20.40:1099</param-value>
    <description></description>
  </init-param>

  <!-- Common parameters -->
  <init-param>
    <param-name>data_source</param-name>
    <param-value>SCREENING_OLTP</param-value>
    <description></description>
  </init-param>

  <init-param>
    <param-name>tx_data_source</param-name>
    <param-value>TX_SCREENING_OLTP</param-value>
    <description></description>
  </init-param>

</servlet>

<servlet-mapping>
  <servlet-name>screening</servlet-name>
  <url-pattern>screening</url-pattern>
</servlet-mapping>

<taglib>
    <taglib-uri>screening.tld</taglib-uri>
    <taglib-location>screening.tld</taglib-location>
</taglib>

</web-app>
