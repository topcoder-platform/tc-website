<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.oracle.model" auto-import="false">

    <class name="PredictionResult" table="prediction_result">
        <composite-id name="id" class="PredictionResult$Identifier">
            <key-many-to-one name="user" class="User" column="user_id"/>
            <key-many-to-one name="candidate" class="Candidate" column="candidate_id"/>
        </composite-id>

        <!--
                <many-to-one name="contest" column="contest_id" class="Contest" access="field"
                             cascade="none" insert="false" update="false"/>

                <many-to-one name="property" column="property_id" class="ContestProperty" access="field"
                             cascade="none" insert="false"
                             update="false" outer-join="true"/>
        -->
        <property name="score"/>

    </class>

</hibernate-mapping>