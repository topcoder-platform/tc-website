<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.reg.model">

    <class name="Address" table="address">
        <id name="id" column="address_id">
            <generator class="com.topcoder.web.reg.model.IdGenerator">
                <param name="sequence_name">ADDRESS_SEQ</param>
            </generator>
        </id>
        <set name="users" inverse="true" table="user_address_xref">
            <key column="address_id"/>
            <many-to-many column="user_id" class="User"/>
        </set>

        <property name="addressTypeId" column="address_type_id"/>
        <property name="address1"/>
        <property name="address2"/>
        <property name="address3"/>
        <property name="city"/>
        <many-to-one name="state" column="state_code" class="State"/>
        <many-to-one name="country" column="country_code" class="Country"/>
        <property name="postalCode"/>
        <property name="province"/>
    </class>
</hibernate-mapping>