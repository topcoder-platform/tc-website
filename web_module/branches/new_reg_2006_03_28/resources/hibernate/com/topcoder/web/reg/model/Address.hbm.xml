<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.topcoder.web.reg.model.Address" table="address">
        <id name="id" column="address_id">
            <generator class="com.topcoder.web.reg.model.IdGenerator">
                <param name="sequence_name">ADDRESS_SEQ</param>
            </generator>
        </id>
        <property name="addressTypeId" column="address_type_id"/>
        <property name="address1"/>
        <property name="address2"/>
        <property name="address3"/>
        <property name="city"/>
        <one-to-one name="state" class="com.topcoder.web.reg.model.State" fetch="join" cascade="none"/>
        <one-to-one name="country" class="com.topcoder.web.reg.model.Country" fetch="join" cascade="none"/>
        <property name="zip"/>
        <property name="province"/>
    </class>
</hibernate-mapping>