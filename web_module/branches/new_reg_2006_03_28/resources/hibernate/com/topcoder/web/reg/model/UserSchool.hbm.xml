<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.reg.model">
    <class name="UserSchool" table="user_school">
        <id name="id" column="notify_id" access="field"/>
        <composite-id name="id" class="UserSchool$Identifier">
            <key-property name="userId" type="long" column="user_id"/>
            <key-property name="schoolId" type="long" column="school_id"/>
        </composite-id>
        <property name="user" class="User" column="user_id"/>
        <property name="school" class="School" column="school_id"/>
        <property name="current" type="boolean"/>
        <property name="GPA"/>
        <property name="GPAScale"/>
        <property name="viewable" type="boolean"/>

    </class>

</hibernate-mapping>