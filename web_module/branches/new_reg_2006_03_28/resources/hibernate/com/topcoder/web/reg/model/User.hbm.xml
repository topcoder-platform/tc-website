<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.topcoder.web.reg.model.User" table="user">
        <id name="id" column="user_id">
            <generator class="com.topcoder.web.reg.model.IdGenerator">
                <param name="sequence_name">main_sequence</param>
            </generator>
        </id>
        <property name="firstName" column="first_name"/>
        <property name="middleName" column="middle_name"/>
        <property name="lastName" column="last_name"/>
        <property name="handle"/>
        <property name="status"/>
        <property name="password"/>
        <property name="activationCode" column="activation_code"/>

<!--        <joined-subclass name="com.topcoder.web.reg.model.Coder" table="CODER">
            <key column="coder_id"/>
        </joined-subclass>-->

        <set name="addresses" table="user_address_xref" cascade="save-update">
            <key column="user_id"/>
            <many-to-many column="address_id" class="com.topcoder.web.reg.model.Address"/>
        </set>
        <set name="emailAddresses" cascade="save-update">
            <key column="user_id"/>
            <one-to-many class="com.topcoder.web.reg.model.Email"/>
        </set>
<!--        <set name="phoneNumbers">
            <key column="user_id"/>
            <one-to-many class="com.topcoder.web.reg.model.Phone"/>
        </set>-->



    </class>


</hibernate-mapping>