<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.reg.model">

    <class name="User" table="user">
        <id name="id" column="user_id">
            <generator class="com.topcoder.web.reg.model.IdGenerator">
                <param name="sequence_name">main_sequence</param>
            </generator>
        </id>
        <property name="firstName" column="first_name"/>
        <property name="middleName" column="middle_name"/>
        <property name="lastName" column="last_name"/>
        <property name="handle"/>
        <property name="status"/>
        <property name="password"/>
        <property name="activationCode" column="activation_code"/>
        <many-to-one name="timeZone" column="timezone_id" class="TimeZone"/>

        <set name="addresses" table="user_address_xref" cascade="save-update">
            <key column="user_id"/>
            <many-to-many column="address_id" class="Address" unique="true"/>
        </set>
<!--
        <set name="addresses" table="user_address_xref" cascade="save-update" outer-join="false">
            <key column="user_id"/>
            <many-to-many column="address_id" class="Address"/>
        </set>
-->
        <set name="emailAddresses" cascade="save-update">
            <key column="user_id"/>
            <one-to-many class="Email"/>
        </set>
        <set name="phoneNumbers" cascade="save-update">
            <key column="user_id"/>
            <one-to-many class="Phone"/>
        </set>
        <set name="notifications" table="user_notify_xref" cascade="save-update" outer-join="false">
            <key column="user_id"/>
            <many-to-many column="notify_id" class="Notification"/>
        </set>
<!--
        <set name="demographicResponses" cascade="save-update">
            <key column="user_id"/>
            <one-to-many class="DemographicResponse"/>
        </set>
-->
        <joined-subclass name="Coder" table="coder">
            <key column="coder_id"/>
            <property name="memberSince" type="timestamp" column="member_since"/>
            <property name="quote"/>
            <property name="coderTypeId" column="coder_type_id"/>
            <property name="compCountryCode" column="comp_country_code"/>
            <one-to-one name="currentSchool" class="CurrentSchool" constrained="false" cascade="save-update"/>
        </joined-subclass>

    </class>


</hibernate-mapping>