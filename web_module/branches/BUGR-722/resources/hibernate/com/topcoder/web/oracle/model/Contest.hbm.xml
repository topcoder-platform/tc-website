<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.oracle.model" auto-import="false">

    <class name="Contest" table="oracle_oltp:contest">
        <id name="id" column="contest_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">ORACLE_CONTEST_SEQ</param>
                <param name="return_class">java.lang.Integer</param>
            </generator>
        </id>
        <property name="name"/>
        <!--
                <property name="startTime" column="start_time"/>
                <property name="endTime" column="end_time"/>
        -->
        <!--
                <property name="forumId" column="forum_id"/>
        -->
        <set name="prizes" table="oracle_oltp:contest_prize_xref" cascade="all" sort="natural">
            <key column="contest_id" not-null="true"/>
            <many-to-many column="prize_id" class="Prize"/>
        </set>
        <many-to-one name="status" column="contest_status_id" class="ContestStatus"/>
        <many-to-one name="type" column="contest_type_id" class="ContestType"/>
        <set name="rounds" cascade="save-update" inverse="true">
            <key column="contest_id" not-null="true"/>
            <one-to-many class="Round"/>
        </set>


    </class>
</hibernate-mapping>