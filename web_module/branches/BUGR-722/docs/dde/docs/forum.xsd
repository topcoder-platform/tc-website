		</xs:sequence>
		<xs:attribute name="id" type="xs:unsignedLong" use="required"/>
	</xs:complexType>
	<xs:complexType name="postType">
		<xs:sequence>
			<xs:element name="msg" type="xs:string"/>
			<xs:element name="user">
				<xs:complexType>
					<xs:simpleContent>
						<xs:extension base="xs:string">
