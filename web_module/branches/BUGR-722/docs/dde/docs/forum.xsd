					<xs:simpleContent>
						<xs:extension base="xs:string">
							<xs:attribute name="id" type="xs:unsignedLong" use="required"/>
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
			<xs:element name="lastPostTime" type="xs:time"/>
