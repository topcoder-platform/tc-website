import java.util.*; 
public class TheDiceGame 
{ 
  public double expectedThrows(int n) 
  { 
    double[] exp = new double[n+1]; 
    for(int i=1;i&lt;=n;i++) 
    { 
      exp[i] = 0; 
      for(int j=1;j&lt;=6;j++) 
        exp[i] += i-j&gt;0?1+exp[i-j]:1.0; 
      exp[i] /= 6.0; 
    } 
    return exp[n]; 
  } 
}
