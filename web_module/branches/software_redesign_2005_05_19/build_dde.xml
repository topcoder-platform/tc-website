    <property name="shared.jar.name" value="shared.jar" />
    
    <path id="buildlibs">
        <pathelement location="${build_classdir}"/>
        <pathelement location="${ejb.jar}"/>
        <pathelement location="${jdbc.jar}"/>
        <pathelement location="${log4j.jar}"/>
