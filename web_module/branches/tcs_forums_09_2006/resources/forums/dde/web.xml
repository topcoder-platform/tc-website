<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app
        version="2.4"
        xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>forums</servlet-name>
        <servlet-class>com.topcoder.web.forums.controller.ForumsServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Main</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>

        <init-param>
            <param-name>processor_path</param-name>
            <param-value>com.topcoder.web.forums.controller.request.</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>/errorPage.jsp</param-value>
        </init-param>
        <!-- end parameters required by BaseServlet -->

        <!-- begin parameters for ForumsServlet processor mapping -->
        <init-param>
            <param-name>Admin</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.Admin</param-value>
        </init-param>
        <init-param>
            <param-name>Attach</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.Attach</param-value>
        </init-param>
        <init-param>
            <param-name>AttachFiles</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.AttachFiles</param-value>
        </init-param>
        <init-param>
            <param-name>Category</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.Category</param-value>
        </init-param>
        <init-param>
            <param-name>ForumCreator</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.ForumCreator</param-value>
        </init-param>
        <init-param>
            <param-name>ForumsProcessor</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.ForumsProcessor</param-value>
        </init-param>
        <init-param>
            <param-name>GetAttachment</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.GetAttachment</param-value>
        </init-param>
        <init-param>
            <param-name>Login</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.Login</param-value>
        </init-param>
        <init-param>
            <param-name>Main</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.Main</param-value>
        </init-param>
        <init-param>
            <param-name>RemoveAttachment</param-name>
            <param-value>com.topcoder.web.forums.controller.request.dde.RemoveAttachment</param-value>
        </init-param>
        <!-- end parameters for ForumsServlet processor mapping -->
        <init-param>
            <param-name>authentication_implementation</param-name>
            <param-value>com.topcoder.web.common.security.DDEForumsAuthentication</param-value>
        </init-param>
        <init-param>
        	<param-name>forums_view_dir</param-name>
            <param-value>/forums</param-value>
        </init-param>
    </servlet>

    <filter>
        <filter-name>GZIPResponse</filter-name>
        <filter-class>com.topcoder.web.common.GZIPResponseFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>GZIPResponse</filter-name>
        <servlet-name>forums</servlet-name>
    </filter-mapping>

    <servlet-mapping>
        <servlet-name>forums</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/errorPage.jsp</location>
    </error-page>

</web-app>
