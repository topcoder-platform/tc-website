<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.common.model">

    <class name="SecretQuestion" table="secret_question">
        <id name="id" column="user_id" access="field">
            <generator class="foreign">
                <param name="property">user</param>
            </generator>
        </id>
        <one-to-one name="user" class="User" constrained="true"/>
        <property name="question" access="field"/>
        <property name="response" access="field"/>
    </class>
</hibernate-mapping>