<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.topcoder.web.common.model.User" table="user">
        <id name="id" column="user_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">USER_SEQ</param>
            </generator>
        </id>
        <property name="firstName" column="first_name" access="field"/>
        <property name="middleName" column="middle_name" access="field"/>
        <property name="lastName" column="last_name" access="field"/>
        <property name="handle" access="field"/>
        <property name="lowerHandle" column="handle_lower" update="false" insert="false"/>
        <property name="status" access="field"/>
        <property name="password" access="field"/>
        <property name="activationCode" column="activation_code" access="field"/>
        <many-to-one name="timeZone" column="timezone_id" class="com.topcoder.web.common.model.TimeZone" access="field" cascade="none"/>
        <one-to-one name="coder" class="com.topcoder.web.common.model.Coder" cascade="save-update" access="field" fetch="select"/>
        <one-to-one name="contact" class="com.topcoder.web.common.model.Contact" cascade="save-update" access="field" fetch="select"/>
        <one-to-one name="secretQuestion" class="com.topcoder.web.common.model.SecretQuestion" cascade="save-update" access="field" fetch="select"/>

        <set name="securityGroups" table="user_group_xref" cascade="none" inverse="true" access="field">
            <key column="login_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.UserGroup"/>
        </set>
        <set name="emailAddresses" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.Email"/>
        </set>
        <set name="phoneNumbers" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.Phone"/>
        </set>
        <set name="addresses" table="user_address_xref" cascade="save-update" access="field">
            <key column="user_id" not-null="true"/>
            <many-to-many column="address_id" class="com.topcoder.web.common.model.Address"/>
        </set>
        <set name="notifications" table="user_notify_xref" cascade="save-update" access="field">
            <key column="user_id" not-null="true"/>
            <many-to-many column="notify_id" class="com.topcoder.web.common.model.Notification"/>
        </set>
        <set name="userPreferences" table="user_preference" inverse="true" cascade="save-update" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.UserPreference"/>
        </set>
        <set name="demographicResponses" cascade="all-delete-orphan" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.DemographicResponse"/>
        </set>
        <set name="terms" table="user_terms_of_use_xref" cascade="save-update" access="field">
            <key column="user_id" not-null="true"/>
            <many-to-many column="terms_of_use_id" class="com.topcoder.web.common.model.TermsOfUse"/>
        </set>
        <set name="eventRegistrations" table="event_registration" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.EventRegistration"/>
        </set>
        <set name="responses" table="response" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.Response"/>
        </set>
        <set name="ballots" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.voting.RankBallot"/>
        </set>
        <set name="compPrizes" table="tcs_catalog:user_contest_prize" cascade="save-update" inverse="true" access="field">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.topcoder.web.common.model.comp.UserContestPrize"/>
        </set>
    </class>


</hibernate-mapping>