<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.web.oracle.model" auto-import="false">

    <class name="Candidate" table="oracle_oltp:candidate">
        <id name="id" column="candidate_id">
            <generator class="com.topcoder.web.common.model.IdGenerator">
                <param name="sequence_name">ORACLE_CANDIDATE_SEQ</param>
                <param name="return_class">java.lang.Integer</param>
            </generator>
        </id>
        <property name="name"/>
        <set name="info" cascade="all" inverse="true" outer-join="true">
            <key column="candidate_id" not-null="true"/>
            <one-to-many class="CandidateInfo"/>
        </set>
    </class>
</hibernate-mapping>