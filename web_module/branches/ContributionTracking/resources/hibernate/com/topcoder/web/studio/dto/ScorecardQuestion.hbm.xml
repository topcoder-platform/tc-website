<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.topcoder.web.studio.dto">
    <class name="ScorecardQuestion" table="scorecard_question">
        <id name="id" column="scorecard_question_id" />
        <property name="type" column="scorecard_question_type_id" access="field" />
        <property name="description" column="description" access="field" />
        <property name="guideline" column="guideline" access="field" />
        <property name="weight" column="weight" access="field" />
        <property name="sort" column="sort" access="field" />
        <property name="uploadDocument" column="upload_document" access="field" />
        <property name="uploadDocumentRequired" column="upload_document_required" access="field" />
    </class>
</hibernate-mapping>
