<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app
        version="2.4"
        xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <!--
        <distributable/>
    -->
    <servlet>
        <servlet-name>epservlet</servlet-name>
        <servlet-class>com.topcoder.web.ep.controller.EPServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Home</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>processor_path</param-name>
            <param-value>com.topcoder.web.ep.controller.request.</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>/errorPage.jsp</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>epservletProfessor</servlet-name>
        <servlet-class>com.topcoder.web.ep.controller.EPServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Home</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>processor_path</param-name>
            <param-value>com.topcoder.web.ep.controller.request.professor.</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>/errorPage.jsp</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>epservletReports</servlet-name>
        <servlet-class>com.topcoder.web.ep.controller.EPServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Home</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>processor_path</param-name>
            <param-value>com.topcoder.web.ep.controller.request.reports</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>/errorPage.jsp</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>epservletStudent</servlet-name>
        <servlet-class>com.topcoder.web.ep.controller.EPServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Home</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>processor_path</param-name>
            <param-value>com.topcoder.web.ep.controller.request.student.</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
