        </init-param>
    </servlet>

    <servlet>
        <servlet-name>epservletAdmin</servlet-name>
        <servlet-class>com.topcoder.web.ep.controller.EPServlet</servlet-class>
        <init-param>
            <param-name>module_key</param-name>
            <param-value>module</param-value>
        </init-param>
        <init-param>
            <param-name>default_processor</param-name>
            <param-value>Home</param-value>
        </init-param>
        <init-param>
            <param-name>login_processor</param-name>
            <param-value>Login</param-value>
        </init-param>
        <init-param>
            <param-name>login_servlet</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
